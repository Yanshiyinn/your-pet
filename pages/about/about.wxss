.header {
  height: 100px;
  background: #ffd18c;
}
.heade {
 height: 40px;
 background: #ffd18c55;
 border-bottom: 1rpx #cccccc solid
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.header .profile {
  height: 80%;
}

.profile .avatar {
  width: 70px;
  height: 70px;
  float: left;
  margin: 7.5px 10px;
  border:rgba(128, 26, 26, 0.541) 10rpx solid;
  border-radius: 40px;
}

.profile .description {
  display: inline-block;
  margin: 20px auto;
  height: 60px;
}

.description .item {
    height: 50%;
    display: flex;
    align-items: center;
    font-size: 40rpx;
}

.left{
  width: 100px;
  height: 100px;
  float:left;
  margin: 10px 10px;
  border-radius: 50%;
}
.right{
  float:right;
  width: 150px;
  height: 100px;
  font-size:20px;
  margin: 30px 10px;
}


